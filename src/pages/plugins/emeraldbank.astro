<style>
  .plugin-page {
    max-width: 1100px;
    margin: 0 auto;
    padding: 40px 20px;
  }
  .plugin-container {
    display: grid;
    grid-template-columns: 260px 1fr;
    gap: 30px;
  }
  .sidebar {
    background: white;
    border-radius: 15px;
    padding: 25px;
    height: fit-content;
    position: sticky;
    top: 100px;
  }
  .sidebar-header {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 20px;
  }
  .plugin-icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #00d4aa 0%, #00b894 100%);
    border-radius: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30px;
  }
  .sidebar h1 {
    font-size: 20px;
    color: #333;
  }
  .version {
    font-size: 14px;
    color: #888;
  }
  .download-buttons {
    margin-bottom: 25px;
  }
  .btn {
    display: block;
    padding: 12px 20px;
    border-radius: 8px;
    font-weight: 600;
    text-align: center;
    text-decoration: none;
    transition: all 0.3s;
  }
  .btn-github {
    background: #333;
    color: white;
  }
  .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
  }
  .toc h3 {
    font-size: 14px;
    color: #888;
    margin-bottom: 10px;
  }
  .toc ul {
    list-style: none;
    padding: 0;
  }
  .toc li {
    margin-bottom: 8px;
  }
  .toc a {
    color: #555;
    text-decoration: none;
    font-size: 14px;
  }
  .toc a:hover {
    color: #667eea;
  }
  .content {
    background: white;
    border-radius: 15px;
    padding: 40px;
  }
  .content h2 {
    font-size: 22px;
    color: #333;
    margin-bottom: 20px;
    padding-bottom: 10px;
    border-bottom: 2px solid #eee;
  }
  .content p {
    font-size: 15px;
    line-height: 1.8;
    color: #555;
    margin-bottom: 20px;
  }
  .content section {
    margin-bottom: 40px;
  }
  .feature-list {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 10px;
  }
  .feature {
    padding: 12px 15px;
    background: #f8f9fa;
    border-radius: 8px;
    font-size: 14px;
  }
  .steps {
    padding-left: 20px;
  }
  .steps li {
    margin-bottom: 10px;
    font-size: 15px;
  }
  code {
    background: #f1f1f1;
    padding: 2px 8px;
    border-radius: 4px;
    font-family: monospace;
    font-size: 13px;
  }
  .table {
    width: 100%;
    border-collapse: collapse;
  }
  .table th, .table td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid #eee;
  }
  .table th {
    background: #f8f9fa;
    font-weight: 600;
  }
  .code-block {
    background: #2d3436;
    border-radius: 10px;
    padding: 20px;
    overflow-x: auto;
  }
  .code-block code {
    background: none;
    color: #dfe6e9;
    font-size: 14px;
  }
  @media (max-width: 768px) {
    .plugin-container {
      grid-template-columns: 1fr;
    }
    .sidebar {
      position: static;
    }
    .feature-list {
      grid-template-columns: 1fr;
    }
  }
</style>
