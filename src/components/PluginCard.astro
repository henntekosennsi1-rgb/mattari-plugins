---
interface Props {
  name: string;
  slug: string;
  version: string;
  icon: string;
  description: string;
  category: 'economy' | 'minigame' | 'utility' | 'world';
  tags: string[];
  bedrockSupport?: boolean;
}
const { 
  name, 
  slug,
  version, 
  icon, 
  description, 
  category, 
  tags, 
  bedrockSupport = true 
} = Astro.props;
const categoryClass = {
  economy: 'economy',
  minigame: 'minigame',
  utility: 'utility',
  world: 'world',
};
---
<a href={`/mattari-plugins/plugins/${slug}`} class="plugin-card">
  <div class:list={['card-header', categoryClass[category]]}>
    <div class="card-icon">{icon}</div>
    <div>
      <div class="card-title">{name}</div>
      <div class="card-version">v{version}</div>
    </div>
  </div>
  <div class="card-body">
    <p class="card-description">{description}</p>
    <div class="card-tags">
      {bedrockSupport && <span class="tag tag-bedrock">✅ BE対応</span>}
      <span class="tag tag-java">☕ Java</span>
      {tags.map(tag => <span class="tag">{tag}</span>)}
    </div>
    <div class="card-footer">
      <span class="detail-btn">詳細を見る →</span>
    </div>
  </div>
</a>
<style>
  .plugin-card {
    background: #f8f9fa;
    border-radius: 15px;
    overflow: hidden;
    transition: all 0.3s;
    cursor: pointer;
    border: 2px solid transparent;
    text-decoration: none;
    color: inherit;
    display: block;
  }
  .plugin-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    border-color: #667eea;
  }
  .card-header {
    padding: 20px;
    color: white;
    display: flex;
    align-items: center;
    gap: 15px;
  }
  .card-header.economy {
    background: linear-gradient(135deg, #00d4aa 0%, #00b894 100%);
  }
  .card-header.minigame {
    background: linear-gradient(135deg, #ff6b6b 0%, #ee5a5a 100%);
  }
  .card-header.utility {
    background: linear-gradient(135deg, #54a0ff 0%, #2e86de 100%);
  }
  .card-header.world {
    background: linear-gradient(135deg, #feca57 0%, #ff9f43 100%);
  }
  .card-icon {
    width: 50px;
    height: 50px;
    background: rgba(255,255,255,0.2);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28px;
  }
  .card-title {
    font-size: 18px;
    font-weight: 700;
  }
  .card-version {
    font-size: 12px;
    opacity: 0.8;
    margin-top: 3px;
  }
  .card-body {
    padding: 20px;
  }
  .card-description {
    font-size: 14px;
    color: #666;
    line-height: 1.6;
    margin-bottom: 15px;
  }
  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 15px;
  }
  .tag {
    padding: 5px 12px;
    background: #e9ecef;
    border-radius: 20px;
    font-size: 12px;
    color: #555;
  }
  .tag-bedrock {
    background: #d4edda;
    color: #155724;
  }
  .tag-java {
    background: #fff3cd;
    color: #856404;
  }
  .card-footer {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    padding-top: 15px;
    border-top: 1px solid #e9ecef;
  }
  .detail-btn {
    padding: 8px 18px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border-radius: 20px;
    font-size: 13px;
    font-weight: 600;
  }
</style>
