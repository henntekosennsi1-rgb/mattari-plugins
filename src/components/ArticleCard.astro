---
interface Props {
  title: string;
  slug: string;
  emoji: string;
  description: string;
  tags: string[];
  date: string;
  views?: number;
  featured?: boolean;
  hot?: boolean;
}

const { 
  title, 
  slug,
  emoji, 
  description, 
  tags, 
  date,
  views = 0,
  featured = false,
  hot = false
} = Astro.props;
---

<a href={`/articles/${slug}`} class:list={['article-card', { featured }]}>
  <div class:list={['article-image', { small: !featured }]}>
    <span class="article-emoji">{emoji}</span>
  </div>
  <div class="article-content">
    <div class="article-tags">
      {hot && <span class="article-tag hot">üî• ‰∫∫Ê∞ó</span>}
      {tags.map(tag => <span class="article-tag">{tag}</span>)}
    </div>
    <h3>{title}</h3>
    <p>{description}</p>
    <div class="article-meta">
      <span>üìÖ {date}</span>
      {views > 0 && <span>üëÅÔ∏è {views.toLocaleString()} views</span>}
    </div>
  </div>
</a>

<style>
  .article-card {
    background: #f8f9fa;
    border-radius: 15px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    display: flex;
    transition: all 0.3s;
    border: 2px solid transparent;
  }

  .article-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.12);
    border-color: #667eea;
  }

  .article-card.featured {
    flex-direction: column;
  }

  .article-image {
    width: 120px;
    min-height: 100px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .article-card.featured .article-image {
    width: 100%;
    height: 120px;
  }

  .article-image.small {
    width: 100px;
    min-height: 80px;
  }

  .article-emoji {
    font-size: 40px;
  }

  .article-image.small .article-emoji {
    font-size: 32px;
  }

  .article-content {
    padding: 15px;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .article-tags {
    display: flex;
    gap: 8px;
    margin-bottom: 8px;
    flex-wrap: wrap;
  }

  .article-tag {
    padding: 3px 10px;
    background: #e9ecef;
    border-radius: 12px;
    font-size: 11px;
    color: #555;
    font-weight: 500;
  }

  .article-tag.hot {
    background: linear-gradient(135deg, #ff6b6b 0%, #ee5a5a 100%);
    color: white;
  }

  .article-card h3 {
    font-size: 15px;
    font-weight: 700;
    margin-bottom: 8px;
    color: #333;
    line-height: 1.4;
  }

  .article-card.featured h3 {
    font-size: 17px;
  }

  .article-card p {
    font-size: 13px;
    color: #666;
    line-height: 1.5;
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .article-meta {
    display: flex;
    gap: 15px;
    margin-top: 10px;
    font-size: 12px;
    color: #888;
  }

  @media (max-width: 768px) {
    .article-card {
      flex-direction: column;
    }

    .article-image, .article-image.small {
      width: 100%;
      height: 100px;
    }
  }
</style>
